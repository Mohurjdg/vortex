                box[1].Filled = VisualsSettings.BoxESPFilled
                box[1].Transparency = VisualsSettings.BoxESPFilled and VisualsSettings.BoxESPFilledTransparency or 1
                box[1].Color = VisualsSettings.BoxESPColor
